<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace一般定义为 包名+文件名 -->
<mapper namespace="com.example.server0.mapper.VoteVoterMapper">
    <resultMap id="VoteCandidateMap" type="com.example.server0.model.VoteVoter">
        <id column="voteVoterId" jdbcType="INTEGER" property="voteVoterId" javaType="java.lang.Integer"/>
        <result column="voter_Id" jdbcType="INTEGER" property="voter_Id" javaType="java.lang.Integer"/>
        <result column="vote_Id" jdbcType="INTEGER" property="vote_Id" javaType="java.lang.Integer"/>
    </resultMap>

    <select id="countVotersByVoteId" resultType="int">
        SELECT COUNT(voter_Id) AS numVoters
        FROM votevoter
        WHERE vote_Id = #{voteId}
    </select>

    <select id="voterIdsByVoteId" resultType="int[]" >
        SELECT ARRAY_AGG(voter_Id) AS voterIds
        FROM votevoter
        WHERE vote_Id = #{voteId};
    </select>


</mapper>